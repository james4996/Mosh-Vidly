@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Date.ToLongDateString()</li>
    <li>Date Added: @Model.AddedDate.Date.ToLongDateString()</li>
    <li>Number In Stock: @Model.Stock</li>
</ul>

